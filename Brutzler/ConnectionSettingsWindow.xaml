<Window x:Class="Brutzler.ConnectionSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Brutzler"
        mc:Ignorable="d"
        Title="Connection Settings" Height="136" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Device" VerticalAlignment="Top"/>
        <ComboBox ItemsSource="{Binding PortNames}" SelectedIndex="{Binding SelectedIndex}" HorizontalAlignment="Left" Margin="58,4,0,0" VerticalAlignment="Top" Width="276"/>
        <Button Content="Update" HorizontalAlignment="Left" Margin="339,6,0,0" VerticalAlignment="Top" Width="45" Click="Button_UpdatePorts_Click"/>
        <Button Content="OK" IsDefault="True" HorizontalAlignment="Left" Margin="10,65,0,0" VerticalAlignment="Top" Width="75" Click="Button_Ok_Click"/>
        <Button Content="Cancel" IsCancel="True" HorizontalAlignment="Left" Margin="132,65,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
