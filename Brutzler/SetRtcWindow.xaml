<Window x:Class="Brutzler.SetRtcWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Brutzler"
        mc:Ignorable="d"
        Title="Set Date/Time" Height="290" Width="219" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <Calendar Name="DpDate" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,183,0,0" TextWrapping="Wrap" Text="Time" VerticalAlignment="Top"/>
        <TextBox Name="TbTime" HorizontalAlignment="Left" Height="23" Margin="47,182,0,0" TextWrapping="Wrap" Text="00:00:00" VerticalAlignment="Top" Width="65"/>
        <Button Content="Now" HorizontalAlignment="Left" Margin="117,185,0,0" VerticalAlignment="Top" Width="72" Click="Button_Now_Click"/>
        <Button Content="OK" IsDefault="True" HorizontalAlignment="Left" Margin="10,220,0,0" VerticalAlignment="Top" Width="75" Click="Button_Ok_Click"/>
        <Button Content="Cancel" IsCancel="True" HorizontalAlignment="Left" Margin="114,220,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
